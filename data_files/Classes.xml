                            </bonus>
                            <bonus>
                                <value>4</value>
                                <type>Rage constitution</type>
                            </bonus>
                            <bonus>
                                <value>+2</value>
                                <type>Rage morale on will</type>
                            </bonus>
                            <bonus>
                                <value>-2</value>
                                <type>Rage AC</type>
                            </bonus>
                        </bonuses>
                    </capacity>
                </ranks>
            </feature>
            <feature>
                <id>Daily rages</id>
                <ranks>
                    <capacity rank = "1">
                        <name>Rage 1/d</name>
                        <description>The character can fly into a rage once a day.</description>
                        <bonuses>
                            <bonus>
                                <value>1</value>
                                <type>Daily rages</type>
                            </bonus>
                        </bonuses>
                    </capacity>
                    <capacity rank = "2">
